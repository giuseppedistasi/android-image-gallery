<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gds.androidimagegallery.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="40dp">

        <Button
            android:id="@+id/start_gallery_asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_gallery_assets" />

        <Button
            android:id="@+id/start_gallery_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/start_gallery_web" />

        <Button
            android:id="@+id/start_gallery_web_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/start_gallery_web_xml" />

    </LinearLayout>
</RelativeLayout>
